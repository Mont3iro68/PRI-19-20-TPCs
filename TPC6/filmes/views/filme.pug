extends layout

block content
  .w3-card-2
    a(href="/filmes") Voltar
    table.w3-table-all
      tr
        th ID:
        td= filme._id

        th Ano:
        td= filme.year

  .w3-header.w3-metro-darken
    h1.w3-center
      b= filme.title
  
  .w3-card-2.w3-row

    .w3-half.w3-container
      h2 Elenco:

      table.w3-table-all
          tr.w3-indigo
            th Nome:
          
          each a in filme.cast
            tr
              td= a

    .w3-half.w3-container
      h2 Genero:

      table.w3-table-all
          tr.w3-indigo
            th Genero:
          
          each g in filme.genres
            tr
              td= g




        
        
        
        
