extends layout

block content
  header.w3-container.w3-dark-grey
    h1 CLAV-Teste2019

  br
  .w3-container
    h3 Lista de Tipologias 
    
  .w3-container
    table.w3-table-all
      tr.w3-dark-grey
        th Estado
        th Sigla
        th ID
        th Designação
        
          
      each t in tipologias
        tr 
          td= t.estado
          td= t.sigla
          td= t.id 
          td 
            a(href="/tipologias/"+t.id)= t.designacao